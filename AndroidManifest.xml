<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.cmput301w13t04.food"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.github.cmput301w13t04.food.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.cmput301w13t04.food.ViewRecipe"
            android:label="@string/title_activity_view_recipe" >
        </activity>
        <activity
            android:name="com.github.cmput301w13t04.food.Activity_ViewIngredient"
            android:label="@string/title_activity_view_ingredient" >
        </activity>
        <activity
            android:name="com.github.cmput301w13t04.food.AddIngredient"
            android:label="@string/title_activity_add_ingredient" >
        </activity>
        <activity
            android:name="com.github.cmput301w13t04.food.Activity_ViewRecipeList"
            android:label="@string/title_activity_view_recipe_list"
            android:parentActivityName="com.github.cmput301w13t04.food.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.github.cmput301w13t04.food.MainActivity" />
        </activity>
        <activity
            android:name="com.github.cmput301w13t04.food.Activity_ViewIngredientList"
            android:label="@string/title_activity_view_ingredient_list" >
        </activity>
        <activity
            android:name="com.github.cmput301w13t04.food.Activity_EditIngredient"
            android:label="@string/title_activity_edit_ingredient" >
        </activity>
    </application>

</manifest>